<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.iBookStore.entity">

    <class name="Book" table="books">
        <id name="id" column="id">
            <generator class="uuid"/>
        </id>
        <property name="isbn" column="book_isbn" />
        <property name="name" column="book_name"/>
        <property name="img" column="img" />
        <property name="author" column="author"/>
        <property name="price" column="price"/>
        <property name="tag" column="tag" />
        <property name="content" column="content"/>
        <property name="authorInfo" column="authorInfo"/>
        <property name="stock" column="stock" />
    </class>

</hibernate-mapping>
